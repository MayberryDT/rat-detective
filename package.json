{
  "name": "rat-detective",
  "version": "1.0.0",
  "description": "Rat Detective: Whisker Wars - A multiplayer FPS featuring tactical rat combat",
  "main": "src/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "dev": "vite",
    "start": "node server.js",
    "start:dev": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "server:dev": "nodemon server.js",
    "build": "npm run build:frontend",
    "build:frontend": "vite build",
    "build:backend": "echo \"No build step needed for backend\"",
    "heroku-postbuild": "npm run build:backend",
    "preview": "vite preview",
    "build:dev": "node build.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nipplejs": "^0.10.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.162.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.0",
    "vite": "^5.1.4"
  },
  "engines": {
    "node": "18.x"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(three|socket.io-client)/)"
    ]
  }
}
